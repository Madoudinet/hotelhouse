{% extends 'base.html.twig' %}


{% block title %}Votre commentaire{% endblock %}

{% block body %}
        <link rel="stylesheet" href="./css/style.css">

<h1 class="text-center my-4">Votre commentaire</h1>
<div class="container">
{{ form_start(form) }}
<div class="row">
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.note) }}
    {{ form_row(form.commantaire) }}
    {{ form_row(form.category) }}
</div>
<button type="submit" class="btn btn-primary my-4">Valider</button>
{{ form_end(form) }}
</div>

{% endblock %}